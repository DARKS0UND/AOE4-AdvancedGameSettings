
-- This function spawns a castle next to each player's Town Center
function CustomOptions_SpawnKeeps()
	for i, player in pairs(PLAYERS) do
		local player_civ = Player_GetRaceName(player.id)
		
		local ebp_building = AGS_GetCivilizationEntity(player_civ, AGS_BP_KEEP)		
		local ename = InternalCustomOptions_EntityGroupName(player.id, _custom.keep)
		
		InternalCustomOptions_SpawnEntityAtSpawnOffset(player.id, ename, ebp_building, 15, 0, 0)
	end
end